@page
@model Store.Pages.ProductMaster.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Admin/Ad_Layout.cshtml";
}
<style>
    .card {
        margin-top: 20px;
        border: none;
        border-radius: 10px;
    }

    .card-body {
        padding: 30px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group input,
    .form-group select {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.25rem;
    }

    .text-center {
        text-align: center;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["ErrorMessage"]
    </div>
}

<div style="text-align:center">
    <h1>Create Product</h1>
    <h4>Product Details</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Product.ProductName" class="control-label"></label>
                        <input asp-for="Product.ProductName" class="form-control" />
                        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ProductDescription" class="control-label"></label>
                        <input asp-for="Product.ProductDescription" class="form-control" />
                        <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CategoryID" class="control-label"></label>
                        <select asp-for="Product.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.Price" class="control-label"></label>
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.ProductImage" class="control-label"></label>
                        <input asp-for="Image" class="form-control" type="file" />
                        <span asp-validation-for="Product.ProductImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Inventory.QuantityInStock" class="control-label"></label>
                        <input asp-for="Inventory.QuantityInStock" class="form-control" />
                        <span asp-validation-for="Inventory.QuantityInStock" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-primary btn-lg w-50" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
